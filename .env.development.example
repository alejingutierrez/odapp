# ODA Platform - Development Environment Variables
# Copy this file to .env.development for local development

# Database Configuration
POSTGRES_DB=oda_dev
POSTGRES_USER=oda_user
POSTGRES_PASSWORD=oda_password
POSTGRES_PORT=5433

# Redis Configuration
REDIS_PASSWORD=redis_password
REDIS_PORT=6380

# Elasticsearch Configuration
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_TRANSPORT_PORT=9300
ES_HEAP_SIZE=512m
ES_SECURITY_ENABLED=false

# Kibana Configuration
KIBANA_PORT=5601

# RabbitMQ Configuration
RABBITMQ_USER=oda_user
RABBITMQ_PASSWORD=oda_password
RABBITMQ_VHOST=oda_vhost
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# MinIO Configuration
MINIO_ROOT_USER=oda_minio_user
MINIO_ROOT_PASSWORD=oda_minio_password
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# Application Configuration
API_PORT=3001
FRONTEND_HTTP_PORT=3000
STORYBOOK_PORT=6006

# Application URLs
FRONTEND_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:3001
REACT_APP_WS_URL=ws://localhost:3001
CORS_ORIGINS=http://localhost:3000,http://localhost:6006

# Security (Development only - use secure values in production)
JWT_SECRET=dev-jwt-secret-key-123!
SESSION_SECRET=dev-session-secret-456!

# Email Configuration (MailHog for development)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=dev@oda.local

# File Upload Configuration
S3_BUCKET_NAME=oda-assets-dev
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf
