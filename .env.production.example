# ODA Platform - Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Database Configuration
POSTGRES_DB=oda_prod
POSTGRES_USER=oda_user
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password
REDIS_PORT=6379

# Elasticsearch Configuration
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_TRANSPORT_PORT=9300
ES_HEAP_SIZE=2g
ES_SECURITY_ENABLED=true
ELASTIC_USERNAME=elastic
ELASTIC_PASSWORD=your-secure-elastic-password

# Kibana Configuration
KIBANA_PORT=5601
KIBANA_PUBLIC_URL=https://kibana.yourdomain.com

# RabbitMQ Configuration
RABBITMQ_USER=oda_user
RABBITMQ_PASSWORD=your-secure-rabbitmq-password
RABBITMQ_VHOST=oda_vhost
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# MinIO Configuration
MINIO_ROOT_USER=your-minio-admin-user
MINIO_ROOT_PASSWORD=your-secure-minio-password
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BROWSER_REDIRECT_URL=https://minio-console.yourdomain.com

# Application Configuration
API_PORT=3001
FRONTEND_HTTP_PORT=80
FRONTEND_HTTPS_PORT=443
STORYBOOK_PORT=6006

# Application URLs
FRONTEND_URL=https://yourdomain.com
REACT_APP_API_URL=https://api.yourdomain.com
REACT_APP_WS_URL=wss://api.yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-chars
SESSION_SECRET=your-super-secure-session-secret-key-min-32-chars

# Email Configuration
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@yourdomain.com

# File Upload Configuration
S3_BUCKET_NAME=oda-assets-prod
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf
