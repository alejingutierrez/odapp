# Database Configuration
DATABASE_URL="postgresql://oda_user:oda_password@localhost:5433/oda_dev"
DATABASE_POOL_SIZE=10
DATABASE_CONNECTION_TIMEOUT=20000
DATABASE_QUERY_TIMEOUT=60000

# Redis Configuration
REDIS_URL="redis://:redis_password@localhost:6380"
REDIS_TTL=3600
REDIS_MAX_RETRIES=3

# Elasticsearch Configuration
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_INDEX_PREFIX="oda_dev"

# RabbitMQ Configuration
RABBITMQ_URL="amqp://oda_user:oda_password@localhost:5672/oda_vhost"

# MinIO/S3 Configuration
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY="oda_minio_user"
S3_SECRET_KEY="oda_minio_password"
S3_BUCKET_NAME="oda-assets"
S3_REGION="us-east-1"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# API Configuration
API_PORT=3001
API_HOST="0.0.0.0"
API_BASE_URL="http://localhost:3001"
FRONTEND_URL="http://localhost:3000"

# CORS Configuration
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Development)
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@oda.local"

# Shopify Integration
SHOPIFY_API_KEY=""
SHOPIFY_API_SECRET=""
SHOPIFY_WEBHOOK_SECRET=""
SHOPIFY_SCOPES="read_products,write_products,read_orders,read_customers,write_inventory"

# External APIs
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
PAYPAL_CLIENT_ID=""
PAYPAL_CLIENT_SECRET=""

# Logging
LOG_LEVEL="debug"
LOG_FORMAT="json"

# Environment
NODE_ENV="development"
APP_NAME="Oda Fashion Platform"
APP_VERSION="1.0.0"

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret-change-in-production"

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,image/gif"

# Monitoring
SENTRY_DSN=""
DATADOG_API_KEY=""

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_SHOPIFY_SYNC=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Database Monitoring
DB_SLOW_QUERY_THRESHOLD=1000
DB_CONNECTION_POOL_MIN=2
DB_CONNECTION_POOL_MAX=10