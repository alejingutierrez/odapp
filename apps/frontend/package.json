{
  "name": "@oda/frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest --run --config vitest.config.ts",
    "test:watch": "vitest --config vitest.config.ts",
    "test:coverage": "vitest --coverage --config vitest.config.ts",
    "test:fast": "vitest --run --config vitest.config.ts --reporter=verbose",
    "test:debug": "vitest --run --config vitest.config.ts --reporter=verbose --log-level=debug",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite",
    "storybook": "storybook dev -p 6006 --no-open --host 0.0.0.0",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "@hookform/resolvers": "^3.3.2",
    "@oda/shared": "workspace:*",
    "@oda/types": "workspace:*",
    "@oda/utils": "workspace:*",
    "@reduxjs/toolkit": "^2.0.1",
    "antd": "^5.12.8",
    "dayjs": "^1.11.10",
    "lodash-es": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-redux": "^9.0.4",
    "react-router-dom": "^6.20.1",
    "recharts": "^2.8.0",
    "redux-persist": "^6.0.0",
    "socket.io-client": "^4.7.4",
    "yup": "^1.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@storybook/addon-docs": "^7.6.20",
    "@storybook/addon-essentials": "^7.6.20",
    "@storybook/addon-webpack5-compiler-swc": "^1.0.2",
    "@storybook/react-webpack5": "^7.6.20",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint-plugin-storybook": "^0.6.15",
    "jest-axe": "^10.0.0",
    "jsdom": "^23.0.1",
    "msw": "^2.0.11",
    "storybook": "^7.6.20",
    "vite": "^5.0.8",
    "vitest": "^1.1.0"
  }
}
